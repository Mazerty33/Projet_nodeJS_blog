extends ../layout

block content
	h1 article
	- article = article
	table
		tr
			th ID
			td= article[0]['rowid']
		tr
			th titre
			td= article[0]['title']
		tr
			th contenue
			td= article[0]['content']
		tr
			th Actions
			td
				form(method="get", action= modif)
					p.buttons
					input(type="submit", value="Modify")
		tr
			if notThisOne
				th
			if notThisOne
				td
					form(method="post", action= suppr)
						p
						input(type="submit", value="Supprimer")
