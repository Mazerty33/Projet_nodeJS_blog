extends ../layout

block content
	h1 articles in my database
	table
		tr
			th ID
			th titre
			th contenue
		- articlesdata = articles
		each article in articlesdata
			tr
				td= article.rowid
				td= article.title
				td= article.content
				td
					a(href="/articles/"+article.rowid)
						buttons(type="button") View
	div
		a(href= precedent)
			buttons(type="button" disabled= isDisabledReturn) Précédent
		span= avancement
		a(href= suivant)
			buttons(type="button" disabled= isDisabledNext) Suivant
	br
	h2
		a(href="/") Retour
